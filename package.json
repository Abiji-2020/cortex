{
	"name": "cortex",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "yarn run format:check && yarn run lint && vitest run --coverage",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint . ",
		"lint:fix": "eslint . --fix",
		"fix": "yarn  run format && yarn run lint:fix"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"glob": "^11.0.3",
		"ink": "^6.3.1",
		"pastel": "^3.0.0",
		"react": "^19.1.1",
		"vitest": "^3.2.4",
		"zod": "^4.1.9"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.36.0",
		"@sindresorhus/tsconfig": "^8.0.1",
		"@types/react": "^19.1.13",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"@vdemedes/prettier-config": "^2.0.1",
		"@vitest/coverage-v8": "^3.2.4",
		"chalk": "^5.6.2",
		"eslint": "^9.36.0",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-config-xo-react": "^0.28.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^4.6.2",
		"ink-testing-library": "^4.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.9.2"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
